<header class="container center-align">
    <h1>Create a Post</h1>
    <a class="btn" href="/posts">See All Posts</a>
    <a class="btn" href="/posts/create">Create Post</a>
    <br>
    <br>
</header>
<main>
    <div class="container">
        <div class="row">
            <form class="col s12" method="post" action="/posts">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="title" type="text" name="title"required>
                        <label for="title">Title</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="textarea1" class="materialize-textarea" name="body" required></textarea>
                        <label for="textarea1">Body</label>
                    </div>
                </div>
                <button class="btn" type="submit" name="submit">Submit Post</button>
            </form>
        </div>
    </div>
</main>
