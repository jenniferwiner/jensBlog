<header class="container center-align">
    <h1>Edit a Post</h1>
    <a class="btn" href="/posts">See All Posts</a>
    <a class="btn" href="/posts/create">Create Post</a>
    <br>
    <br>
</header>
<main>
    <div class="container">
        <div class="row">
            <article class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="editedTitle" type="text" name="title" value="{{post.title}}"required>
                        <label for="title">Title</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="editedBody" class="materialize-textarea" name="body" required>{{post.body}}</textarea>
                        <label for="textarea1">Body</label>
                    </div>
                </div>
                <button class="btn edit" name="edit" data-id="{{post.id}}">Update Post!</button>
            </article>
        </div>
    </div>
</main>
